{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "predeploy": [
      "npm run build",
      "node scripts/verify-deployment.js"
    ],
    "public": "dist/whiskey-wiz",
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      },
      {
        "source": "/elements/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://blind-barrels.myshopify.com"
          },
          {
            "key": "Content-Type",
            "value": "application/javascript"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/elements/game-elements.js",
        "destination": "/elements/game-elements.js"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}